{
    "extends": [
      ":enabled",
      ":python"
    ],
    "regexManagers": [
      {
        "fileMatch": ["^__init__\\.py$"],
        "matchStrings": ["^release_tag = 'master-\\w*'"],
        "replaceStrings": ["release_tag = '{newVersion}'"],
        "datasourceTemplate": "github-releases"
      }
    ],
    "packageRules": [
      {
        "managers": ["regex"],
        "datasources": ["github-releases"],
        "repositories": ["cpp-linter/clang-tools-static-binaries"],
        "updateTypes": ["major", "minor", "patch"]
      }
    ]
  }
