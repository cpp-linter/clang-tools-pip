{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  // "extends": [
  //   "config:recommended"
  // ],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "fileMatch": ["clang_tools/install.py", "tests/test_util.py"],
      "matchStrings": [
        "\\sappVersion: (?<currentValue>.*)\\s"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["cpp-linter/clang-tools-static-binaries"],
      "extractVersion": "^master-(?<version>.*)$"
    }
  ]
}
